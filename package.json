{
  "name": "wc-le-cs-ts",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "init": "npm install && snowpack install",
    "serve": "serve",
    "dev": "concurrently --kill-others --names tsc,sass-vendors,sass-app,serve \"npm run watch:ts\" \"npm run watch:sass:vendors\" \"npm run watch:sass:app\" \"npm run serve\"",
    "watch:ts": "tsc --watch -p .",
    "watch:sass:vendors": "sass --watch styles/foundation/foundation.scss dist/vendors.css",
    "watch:sass:app": "sass --watch styles/app/app.scss dist/app.css"
  },
  "author": "Frédéric Camblor",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "5.0.2",
    "sass": "1.24.3",
    "serve": "11.3.0",
    "snowpack": "2.1.1",
    "typescript": "3.7.4"
  },
  "webDependencies": {
    "@webcomponents/webcomponentsjs": "2.4.0",
    "jquery": "3.5.0",
    "lit-element": "2.2.1",
    "lit-html": "1.2.1",
    "what-input": "5.2.6"
  },
  "dependencies": {
    "foundation": "4.2.1-1",
    "foundation-sites": "6.6.1"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "snowpack": {
    "scripts": {
      "mount:web_modules": "mount web_modules"
    }
  }
}
